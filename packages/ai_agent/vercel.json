{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.py"
    },
    {
      "src": "/api/net_value_curve",
      "dest": "/api/net_value_curve.py"
    },
    {
      "src": "/api/performance",
      "dest": "/api/performance.py"
    },
    {
      "src": "/api/allocation_history",
      "dest": "/api/allocation_history.py"
    },
    {
      "src": "/api/simulator",
      "dest": "/api/simulator.py",
      "methods": ["POST"]
    },
    {
      "src": "/api/summary",
      "dest": "/api/summary.py"
    }
  ],
  "env": {
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_KEY": "@supabase_key"
  }
}
